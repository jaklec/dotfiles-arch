{
  "eslint.enable": true,
  "eslint.autoFixOnSave": true,
  "eslint.filetypes": ["javascript","javascriptreact", "typescript", "vue"],
  "coc.preferences.formatOnSaveFiletypes": ["javascript", "javascriptreact", "typescript", "vue", "rust", "svelte", "python", "go", "markdown"],
  "javascript.validate.enable": false,
  "python.jediEnabled": false,
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "/usr/bin/black",
  "snippets.ultisnips.directories": [
    "~/.config/nvim/UltiSnips"
  ] ,
  "languageserver": {
    "terraform": {
      "command": "terraform-lsp",
      "filetypes": ["terraform"],
      "initializationOptions": {}
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "kotlin": {
      "command": "kotlin-language-server",
      "filetypes": ["kotlin"],
      "settings": {
        "kotlin": {
          "compiler": {
            "jvm": {
              "target": "1.8"
            }
          }
        }
      }
    }
  },
  "rust-analyzer.serverPath":"/usr/bin/rust-analyzer",
  "rust-analyzer.checkOnSave.command": "clippy",
  "java.home":"/usr/lib/jvm/default",
  "cSpellExt.enableDictionaries": ["swedish"],
  "cSpell.language": "en,sv",
  "cSpell.userWords": [
    "Fargate",
    "Leczinsky",
    "Millis",
    "etag",
    "fastify",
    "healthcheck",
    "itertools",
    "postgres",
    "subprojects",
    "toolchain"
  ],
  "go.goplsOptions": {
    "gofumpt": true
  },
  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck",
    "go": ["golangci-lint"]
  },
  "diagnostic-languageserver.formatFiletypes": {
    "sh": "shfmt"
  }
}
