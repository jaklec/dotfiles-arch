# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
}

order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "disk /"
order += "load"
order += "cpu_usage"
order += "volume master"
order += "battery all"
order += "tztime local"

wireless _first_ {
        format_up = "📡 %ip (%essid [%quality])"
        format_down = "📡 down"
}

ethernet _first_ {
        format_up = "🌍 %ip [%speed]"
        format_down = "🌍 down"
}

battery all {
        format = "🔋%percentage %remaining"
        last_full_capacity = true
}

tztime local {
        format = "🗓 %Y-%m-%d %H:%M:%S"
}

load {
        format = "📈 %1min %5min %15min"
}

cpu_usage {
  format = "⚙%usage"
}

disk "/" {
        format = "💾%avail"
}

volume master {
        format = "🔉 %volume"
        format_muted = "🔇(%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

